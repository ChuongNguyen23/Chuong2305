@model IEnumerable<QLBanHang.Models.KHACHHANG>
@{
    ViewBag.Title = "Danh mục khách hàng";
    Layout = "~/Views/Shared/_LayoutVC.cshtml";
}

<<div class="content-wrapper">
    <section class="content my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">DANH MỤC KHÁCH HÀNG</strong>
                    </div>
                    <div style="text-align:right" class="col-md-6 text-xxl-end">
                        <a href="@Url.Action("Create","KHACHHANG")" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> THÊM</a>
                        <a href="@Url.Action("Trash","KHACHHANG")" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> THÙNG RÁC</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Mã khách hàng
                            </th>
                            <th>
                                Tên khách hàng
                            </th>
                            <th>
                                Địa chỉ
                            </th>
                            <th>
                                Số điện thoại
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Số tài khoản
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenKH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DiaChi)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SDT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.STK)
                                </td>


                                <td>
                                    <a href="@Url.Action("Edit","KHACHHANG",new { id = item.MaKH })" class="btn btn-sm btn-info"><i class="fa-solid fa-edit"></i>Sửa</a>
                                    <a href="@Url.Action("Delete","KHACHHANG",new { id = item.MaKH })" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i>Xóa</a>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </section>
</div>











