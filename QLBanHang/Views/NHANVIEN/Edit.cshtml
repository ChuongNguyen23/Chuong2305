@model QLBanHang.Models.NHANVIEN

@{
    ViewBag.Title = "Chỉnh sửa thông tin";
    Layout = "~/Views/Shared/_LayoutVC.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="content-wrapper">
        <section class="content my-2">
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger text-uppercase">CHỈNH SỬA THÔNG TIN NHÂN VIÊN</strong>
                        </div>
                        <div style="text-align:right" class="col-md-6 text-xxl-end">
                            <button class="btn btn-sm btn-success" type="submit" name="create"><i class="fa-solid fa-floppy-disk"></i>  LƯU</button>
                            <a href="@Url.Action("Index","NHANVIEN")" class="btn btn-sm btn-info"><i class="fa-solid fa-backward"></i>  VỀ DANH SÁCH</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <a><strong>Mã nhân viên</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaNV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaNV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Mã phòng ban</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaPB, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaPB, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Mã chức vụ</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.MaCV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.MaCV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Tên nhân viên</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.TenNV, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.TenNV, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Ngày sinh</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.NgaySinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.NgaySinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Giới tính</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GioiTinh, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Địa chỉ</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <a><strong>Số điện thoại</strong></a>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                        </div>
                    </div>          
                </div>
            </div>
        </section>
    </div>
}