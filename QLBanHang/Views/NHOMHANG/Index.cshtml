@model IEnumerable<QLBanHang.Models.NHOMHANG>
@{
    ViewBag.Title = "Danh mục nhóm hàng";
    Layout = "~/Views/Shared/_LayoutVC.cshtml";
}
<div class="content-wrapper">
    <section class="content my-2">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-6">
                        <strong class="text-danger text-uppercase">DANH MỤC NHÓM HÀNG</strong>
                    </div>
                    <div style="text-align:right" class="col-md-6 text-xxl-end">
                        <a href="@Url.Action("Create","NHOMHANG")" class="btn btn-sm btn-success"><i class="fa-solid fa-plus"></i> THÊM</a>
                        <a href="@Url.Action("Trash","NHOMHANG")" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i> THÙNG RÁC</a>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>
                                Mã nhóm hàng
                            </th>
                            <th>
                                Tên nhóm hàng
                            </th>
                            <th>
                                Thao tác thực hiện
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MaNH)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.TenNH)
                                </td>


                                <td>
                                    <!-- <a href="@Url.Action("Details","NHOMHANG",new { id = item.MaNH })" class="btn btn-sm btn-primary"><i class="fa-solid fa-eye"></i></a> -->
                                    <a href="@Url.Action("Edit","NHOMHANG",new { id = item.MaNH })" class="btn btn-sm btn-info"><i class="fa-solid fa-edit"></i>Sửa</a>
                                    <a href="@Url.Action("Delete","NHOMHANG",new { id = item.MaNH })" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i>Xóa</a>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </section>
</div>